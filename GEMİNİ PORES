import cv2
import numpy as np
import os

def calculate_black_pixel_percentage(image, threshold=10):
    """
    Calculates the percentage of black pixels in an image.

    Args:
        image (numpy.ndarray): The input image (should be grayscale).
        threshold (int): Pixels with a value equal or lower to this
                         are considered 'black'. Default is 10

    Returns:
        float: The percentage of black pixels in the image.
    """
    black_pixels = np.sum(image <= threshold)
    total_pixels = image.shape[0] * image.shape[1]

    if total_pixels == 0:
        return 0.0

    percentage = (black_pixels / total_pixels) * 100

    return percentage


if __name__ == "__main__":

    # set threshold value, so values under this parameter is black
    threshold_value = 10

    for i in range(1, 26):  # Loop through images from 1.png to 25.png
        image_path = f"{i}.png" # Changed to look directly in same directory as the .py file

        try:
            image = cv2.imread(image_path, cv2.IMREAD_GRAYSCALE) #Load in grayscale mode.
        except:
            print(f"Failed to read image from {image_path}, skipping.")
            continue

        if image is not None: # Check image is opened successfully
            percentage = calculate_black_pixel_percentage(image, threshold=threshold_value)
            print(f"Image {i}.png: % black pixels = {percentage:.2f}%")
        else: # Error message for debugging
             print(f"Error: could not load image at {image_path}")
